<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arjjs.ccm.modules.plm.home.dao.PlmPortalPlanDao">
    
	<sql id="plmPortalPlanColumns">
		a.id AS "id",
		a.name AS "name",
		a.introduce AS "introduce",
		a.type AS "type",
		a.extend1 AS "extend1",
		a.extend2 AS "extend2",
		a.create_by AS "createBy.id",
		a.create_date AS "createDate",
		a.update_by AS "updateBy.id",
		a.update_date AS "updateDate",
		a.remarks AS "remarks",
		a.del_flag AS "delFlag"
	</sql>
	
	<sql id="plmPortalPlanJoins">
	</sql>
    
	<select id="get" resultType="PlmPortalPlan">
		SELECT 
			<include refid="plmPortalPlanColumns"/>
		FROM plm_portal_plan a
		<include refid="plmPortalPlanJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="PlmPortalPlan">
		SELECT 
			<include refid="plmPortalPlanColumns"/>
		FROM plm_portal_plan a
		<include refid="plmPortalPlanJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
			<if test="type != null and type != ''">
				AND a.type = #{type}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="PlmPortalPlan">
		SELECT 
			<include refid="plmPortalPlanColumns"/>
		FROM plm_portal_plan a
		<include refid="plmPortalPlanJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO plm_portal_plan(
			id,
			name,
			introduce,
			type,
			extend1,
			extend2,
			create_by,
			create_date,
			update_by,
			update_date,
			remarks,
			del_flag
		) VALUES (
			#{id},
			#{name},
			#{introduce},
			#{type},
			#{extend1},
			#{extend2},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
			#{updateDate},
			#{remarks},
			#{delFlag}
		)
	</insert>
	
	<update id="update">
		UPDATE plm_portal_plan SET 	
			name = #{name},
			introduce = #{introduce},
			type = #{type},
			extend1 = #{extend1},
			extend2 = #{extend2},
			update_by = #{updateBy.id},
			update_date = #{updateDate},
			remarks = #{remarks}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		UPDATE plm_portal_plan SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	
</mapper>