body {
	/* background-color: #f6f6f6; */
	margin: 0px;
	padding: 0px;
}

table {
	table-layout: fixed;
	width: 100%;
}

#portletcontainer {
	position: relative;
	clear: both;
	width: 98%;
	margin: 0 2%;
	padding: 0px 0px 100px 0;
}

.portletcolumn {
	position: absolute;
	margin-left: 28px;
	/* border:1px solid #d4d4d4; */
	/* background-color:white; */
	border-radius: 5px;
	overflow: hidden;
}

.portletdelimiter {
	clear: both;
	height: 1px;
	width: 100%;
	_font-size: 0px;
}

.portlettitle {
	height: 29px;
	/*  border-bottom:1px solid #d4d4d4; */
	/* background-color:#fafafa; */
	/*  background-image: linear-gradient(to bottom,#fff,#f2f2f2); */
	line-height: 30px;
	/* border-radius: 5px; */
	overflow: hidden;
	min-height: 0;
	padding-right: 0;
	padding-left: 0;
}

.portletcontent {
	margin: 2%;
	width: 96%;
	overflow: hidden;
	height: 90%;
}

.portletcolumnheight {
	height: 200px;
}

.titlespan {
	font-size: 14px;;
	font-weight: 900;
	font-family: "微软雅黑", "仿宋", "Arial", "Verdana", "Helvetica", "sans-serif";
	line-height: 27px;
	color: #0e54a9 !important;
	padding: 0 3px;
	width: auto;
	/*   color: #08c!important; 
    border-bottom: 2px solid #08c; */
}

.portletcontent .table th {
	background-color: #0e54a9;
	color: #fff;
}

.titlemore {
	line-height: 27px;
	font-size: 14px;
	float: right;
	padding-right: 20px;
}

#bodydiv {
	width: 100%;
	position: absolute;
	left: 0;
	top: 0;
	/* background-attachment: fixed;
    background-size: contain; */ /*ȫ���Ǳ�������*/
}

.carOn {
	width: 23%;
	height: 35px;
	line-height: 35px;
	float: left;
	margin-left: 10px;
	margin-top: 10px;
	text-align: center;
	background-color: #80caf5;
	color: white;
	font-size: 15px;
}

.carOff {
	width: 23%;
	height: 35px;
	line-height: 35px;
	float: left;
	margin-left: 10px;
	margin-top: 10px;
	text-align: center;
	background-color: #cbcfd2;
	color: white;
	font-size: 15px;
}

.table th, .table td {
	/* color: #333; */
	/* background-color: white; */
	background-image: none;
	font-weight: normal;
	border: 0px;
	height: auto;
}

.table-striped tbody>tr:nth-child(2n)>td, .table-striped tbody>tr:nth-child(2n)>th
	{
	background-color: white;
}

.table-bordered th, .table-bordered td {
	border-left: 0px;
}

.table-bordered {
	border: 0px;
}