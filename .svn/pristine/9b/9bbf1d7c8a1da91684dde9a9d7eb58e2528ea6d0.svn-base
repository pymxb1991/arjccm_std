	<select id="findList" resultType="CcmDeviceUse">
		SELECT
		<include refid="ccmDeviceUseColumns" />
		FROM ccm_device_use a
		<include refid="ccmDeviceUseJoins" />
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
			<if test="id != null and id != ''">
				AND a.id = #{id}
			</if>
			<if test="deviceId != null and deviceId != ''">
				AND a.device_id = #{deviceId}
			</if>
		</where>
		<choose>
			<when
				test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>

	<select id="findAllList" resultType="CcmDeviceUse">
		SELECT
		<include refid="ccmDeviceUseColumns" />
		FROM ccm_device_use a
		<include refid="ccmDeviceUseJoins" />
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
		</where>
		<choose>
			<when
				test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>

	<insert id="insert">
		INSERT INTO ccm_device_use(
		id,
		device_id,
		login_time,
		update_time,
		user_id,
		del_flag
		) VALUES (
		#{id},
		#{deviceId},
		#{loginTime},
		#{updateTime},
		#{userId},
		#{delFlag}
		)
	</insert>

	<update id="update">
		UPDATE ccm_device_use SET
		device_id = #{deviceId},
		login_time = #{loginTime},
		update_time = #{updateTime},
		user_id =
		#{userId}
		WHERE id = #{id}
	</update>

	<update id="delete">
		UPDATE ccm_device_use SET
		del_flag =
		#{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>

</mapper>