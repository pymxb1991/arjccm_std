* {
    padding: 0;
    margin: 0;
}

li {
    list-style: none;
}

a {
    text-decoration: none;
}

/*最外层区域*/
.wrapp {
    width: 1200px;
    height: 860px;
    margin: 0 auto;
    background-color: #edf0f5;
}

/*左侧菜单区域*/
.menu {
    width: 250px;
    height: 860px;
    background: #213141;
    float: left;
}

.logo {
    width: 250px;
    height: 60px;
    font-weight: bold;
    font-size: 24px;
    text-align: center;
    line-height: 60px;
    background-color: #132333;
    color: #a2b2c2;
}

.menu-con {
    width: 250px;
    margin-top: 20px;
}

.menu-item {
    width: 250px;
    height: 50px;
    line-height: 50px;
    color: #a2b2c2;
    position: relative;
}

.menu-item:hover {
    background-color: #132333;
    color: #21a8d8;
}

.icon {
    float: right;
    width: 20px;
    height: 20px;
    font-size: 14px;
    line-height: 50px;
    margin-right: 25px;
    color: #a2b2c2;
}

.name {
    padding-left: 30px;
}

/*鼠标滑过菜单样式*/
.box {
    width: 100px;
    height: 60px;
    background-color: #f6f7fb;
    position: absolute;
    left: 250px;
    top: 0;
    border-radius: 6px;
    box-shadow: 2px 2px 5px #333333;
    display: none;
}

.box-item {
    display: block;
    width: 100px;
    height: 30px;
    line-height: 30px;
    text-align: center;
    border-radius: 6px;
    color: #777;
}

.box-item:hover {
    background-color: #00bfff;
    color: #fff;
}

/*右侧内容区域*/
.content {
    width: 950px;
    height: 1000px;
    float: right;
}

.title {
    width: 950px;
    height: 60px;
    font-size: 16px;
    text-align: center;
    line-height: 60px;
    background-color: #f6f7fb;
}

.video {
    width: 910px;
    height: 700px;
    background-color: #000;
    margin-top: 20px;
    margin-left: 20px;
    margin-bottom: 20px;
}

.footer {
    width: 950px;
    height: 60px;
    font-size: 16px;
    text-align: center;
    line-height: 60px;
    background-color: #f6f7fb;
}