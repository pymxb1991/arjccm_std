<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arjjs.ccm.modules.oa.dao.OaMessageRecordDao">
    
	<sql id="oaMessageRecordColumns">
		a.ID AS "id",
		a.OA_MESSAGE_ID AS "oaMessage.id",
		a.USER_ID AS "user.id",
		a.READ_FLAG AS "readFlag",
		a.READ_DATE AS "readDate",
		u.name AS "user.name",
		o.name AS "user.office.name"
	</sql>
	
	<sql id="oaMessageRecordJoins">
		JOIN sys_user u ON u.id = a.user_id
		JOIN sys_office o ON o.id = u.office_id
	</sql>
    
	<select id="get" resultType="OaMessageRecord">
		SELECT 
			<include refid="oaMessageRecordColumns"/>
		FROM oa_message_record a
		<include refid="oaMessageRecordJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="OaMessageRecord">
		SELECT 
			<include refid="oaMessageRecordColumns"/>
		FROM oa_message_record a
		<include refid="oaMessageRecordJoins"/>
		WHERE 1=1
		<if test="oaMessage != null and oaMessage.id != null and oaMessage.id != ''">
			AND oa_message_id = #{oaMessage.id}
		</if>
		ORDER BY a.read_flag ASC
	</select>
	
	<select id="findAllList" resultType="OaMessageRecord">
		SELECT 
			<include refid="oaMessageRecordColumns"/>
		FROM oa_message_record a
		<include refid="oaMessageRecordJoins"/>
		WHERE 1=1
		ORDER BY a.read_flag ASC
	</select>
	
	<!-- 我的通告未读数量 -->
	<select id="getNumOaMessageRecord" resultType="int">
		SELECT 
			count(1)
		FROM oa_message a
		JOIN oa_message_record r ON r.oa_message_id = a.id 
		<if test="readFlag != null and readFlag != ''">
			AND r.read_flag = #{readFlag}
		</if>
		<if test="user != null and user.id != null and user.id != ''">
			AND r.user_id = #{user.id}
		</if>
		WHERE a.del_flag = #{DEL_FLAG_NORMAL}
		AND a.STATUS = '1'
	</select>
	
	
	
	<insert id="insert">
		INSERT INTO oa_message_record(
			ID,
			OA_MESSAGE_ID,
			USER_ID,
			READ_FLAG,
			READ_DATE
		) VALUES (
			#{id},
			#{oaMessage.id},
			#{user.id},
			#{readFlag},
			#{readDate}
		)
	</insert>
	
	<insert id="insertAll" parameterType="List">
		INSERT INTO oa_message_record(
			ID,
			OA_MESSAGE_ID,
			USER_ID,
			READ_FLAG,
			READ_DATE
		)
		<if test="list.get(0).dbName == 'oracle'">
			<foreach collection="list" item="e" separator=" union all ">
				SELECT #{e.id},
				#{e.oaMessage.id},
				#{e.user.id},
				#{e.readFlag},
				#{e.readDate} FROM dual
			</foreach>
		</if>
		<if test="list.get(0).dbName == 'mssql' or list.get(0).dbName == 'mysql'"> VALUES  
		    <foreach collection="list" item="e" open="" separator="," close="">  
				(#{e.id},
				#{e.oaMessage.id},
				#{e.user.id},
				#{e.readFlag},
				#{e.readDate})
			</foreach>
	    </if>
	</insert>
	
	<update id="update">
		UPDATE oa_message_record SET 	
			READ_FLAG = #{readFlag},
			READ_DATE = #{readDate}
		WHERE OA_MESSAGE_ID = #{oaMessage.id}
			AND USER_ID = #{user.id}
			AND READ_FLAG != '1'
	</update>
	
	<delete id="delete">
		UPDATE FROM oa_message_record 
		WHERE id = #{id}
	</delete>
	
	<delete id="deleteByOaMessageId">
		DELETE FROM oa_message_record 
		WHERE oa_message_id = #{oaMessageId}
	</delete>
	
</mapper>