<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.arjjs.ccm.modules.ccm.financial.dao.CcmPlaceFinancialDao">
    
	<sql id="ccmPlaceFinancialColumns">
		a.id AS "id",
		a.create_by AS "createBy.id",
		a.create_date AS "createDate",
		a.update_by AS "updateBy.id",
		a.update_date AS "updateDate",
		a.type AS "type",
		a.bank_type AS "bankType",
		a.remarks AS "remarks",
		a.base_place_id AS "basePlaceId",
		a.del_flag AS "delFlag"
	</sql>
	
	<sql id="ccmPlaceFinancialAllColumns">
		a.id AS "id",
		a.create_by AS "createBy.id",
		a.create_date AS "createDate",
		a.update_by AS "updateBy.id",
		a.update_date AS "updateDate",
		a.type AS "type",
		a.bank_type AS "bankType",
		a.remarks AS "remarks",
		a.base_place_id AS "basePlaceId",
		a.del_flag AS "delFlag",
		b.place_name AS "placeName",
		b.leader_name AS "leaderName",
		b.address AS "address",
		b.leader_contact
		AS "leaderContact",
		b.relevance_org AS "relevanceOrg"
	</sql>
	
	<sql id="ccmPlaceFinancialJoins">
	</sql>
    
	<select id="get" resultType="CcmPlaceFinancial">
		SELECT 
			<include refid="ccmPlaceFinancialColumns"/>
		FROM ccm_place_financial a
		<include refid="ccmPlaceFinancialJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="CcmPlaceFinancial">
		SELECT 
			<include refid="ccmPlaceFinancialAllColumns"/>
		FROM ccm_place_financial a LEFT JOIN ccm_base_place b ON a.base_place_id = b.id
		<include refid="ccmPlaceFinancialJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
			<if test="type != null and type != ''">
				AND a.type = #{type}
			</if>
			<if test="placeName != null and placeName != ''">
				AND b.place_name LIKE #{placeName}
			</if>
			
			<if test="leaderName != null and leaderName != ''">
				AND b.leader_name LIKE #{leaderName}
			</if>
			<if test="bankType != null and bankType != ''">
				AND a.bank_type = #{bankType}
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="CcmPlaceFinancial">
		SELECT 
			<include refid="ccmPlaceFinancialColumns"/>
		FROM ccm_place_financial a
		<include refid="ccmPlaceFinancialJoins"/>
		<where>
			a.del_flag = #{DEL_FLAG_NORMAL}
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
				ORDER BY a.update_date DESC
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO ccm_place_financial(
			id,
			create_by,
			create_date,
			update_by,
			update_date,
			type,
			bank_type,
			remarks,
			base_place_id,
			del_flag
		) VALUES (
			#{id},
			#{createBy.id},
			#{createDate},
			#{updateBy.id},
			#{updateDate},
			#{type},
			#{bankType},
			#{remarks},
			#{basePlaceId},
			#{delFlag}
		)
	</insert>
	
	<update id="update">
		UPDATE ccm_place_financial SET 	
			update_by = #{updateBy.id},
			update_date = #{updateDate},
			type = #{type},
			bank_type = #{bankType},
			remarks = #{remarks},
			base_place_id = #{basePlaceId}
		WHERE id = #{id}
	</update>
	
	<update id="delete">
		UPDATE ccm_place_financial SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	
</mapper>